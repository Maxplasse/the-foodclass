<div class="card-description">
  <div class="chef-detail">
    <h3 class="chef">
    <div>
      <% if @course.chef.genre == "female" %>
        Cheffe
      <% else %>
        Chef
      <% end %>
      <span>
        <%= @course.chef.user.first_name %> <%= @course.chef.user.last_name %></h3>
        <div>
          <%= image_tag @course.chef.user.photo, class:"avatar-chef-md-sd" %>
        </div>
      </span>
    </div>
    <div class="card-show-infos">
      <p>Temps de réalisation : <%= @course.duration %> minutes</p>
      <p>Difficulté : <%= @course.difficulty %></p>
      <p>Nombre de <i class="fas fa-carrot"></i> </p>
    </div>
    <div class="main-checkbox <%="past_courses" if @course.ends_at < Time.now %>">
      <h3>Ingrédients</h3>
      <div class="card-show-infos">
        <p>Pour 4 personnes :</p>
        <div class="detail-checkbox">
          <% @course.ingredients.each do |ingredient| %>
            <div class="checkbox">
              <input type="checkbox" id="<%= ingredient %>"  name="<%= ingredient %>">
              <label for="<%= ingredient %>"><strong><%= ingredient %></label>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div>
    <%= image_tag @course.chef.user.photo, class:"avatar-chef" %>
  </div>
</div>
