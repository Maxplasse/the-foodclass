        <div class="navbar-brand-sd-md">
          <%= link_to "FoodClass.", root_path, class:"nav-link" %>
        </div>
        <div id="dropdown-link-sd-md">
          <a class="dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-grip-lines"></i>
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <% if user_signed_in? %>
              <li><%= link_to "Mon profil", root_path, class:"dropdown-item" %></li>
              <li><%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
            <% else %>
              <li><%= link_to "Se connecter/S'inscrire", new_user_session_path, class:"dropdown-item" %></li>
            <% end %>
            <li><%= link_to "Communauté", root_path, class:"dropdown-item" %></li>
            <li><%= link_to "Nos Chefs", root_path, class:"dropdown-item" %></li>
            <li><%= link_to "Réserver un cours", root_path, class:"dropdown-item" %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
