<div class="container-foodclass">
  <div class="navbar-foodclass">
    <div class="navbar-layout">
      <div class="navbar-layout-links-first">
        <div>
          <%= link_to "Nos Chefs", root_path, class:"nav-link" %>
        </div>
        <div>
          <%= link_to "Communauté", root_path, class:"nav-link" %>
        </div>
      </div>
      <div class="navbar-brand-ld">
        <%= link_to "FoodClass.", root_path, class:"nav-link" %>
      </div>
      <div>
        <div class="navbar-layout-links-last">
          <div>
            <% if user_signed_in? %>
              <%= link_to "Mon profil", root_path, class:"nav-link" %>
              <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "nav-link" %>
            <% else %>
              <%= link_to "Se connecter/S'inscrire", new_user_session_path, class:"nav-link" %>
            <% end %>
          </div>
          <div>
            <%= link_to "Réserver un cours", root_path, class:"nav-link" %>
          </div>
        </div>
      </div>
    </div>
