<div class="container">
  <div class="row">
    <div class="col-12 col-lg-6 offset-lg-3">

      <div class="form-login">
        <h2>S'inscrire</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">

            <div class="row">
              <div class="col">
                <%= f.input :first_name,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "Prénom" },
                            placeholder: "Prénom"%>
              </div>
              <div class="col">
                <%= f.input :last_name,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "Nom de famille" },
                            placeholder: "Nom de famille"%>
              </div>
            </div>

            <div class="row">
              <div class="col">
                <%= f.input :nickname,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "Pseudo" },
                            placeholder: "Pseudo"%>
              </div>
              <div class="col">
                <%= f.input :photo, as: :file %>
              </div>
            </div>

            <div class="row">
              <div class="col-6">
              <%= f.input :email,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "Email" },
                              placeholder: "Email"%>
              </div>
            </div>

            <div class="row">
              <div class="col">
                <%= f.input :password,
                            required: true,
                            hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password" },
                            placeholder: "Mot de passe"%>
              </div>
              <div class="col">
                <%= f.input :password_confirmation,
                            required: true,
                            input_html: { autocomplete: "new-password" },
                            placeholder: "Mot de passe"%>
              </div>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "S'inscrire" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
